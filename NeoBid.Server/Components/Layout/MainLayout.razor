@using Microsoft.AspNetCore.Components.Authorization
@using NeoBid.Server.Auth
@inherits LayoutComponentBase
@inject AuthenticationService AuthenticationService;
@inject NavigationManager NavigationManager;

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Home</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item">
                            <a class="nav-link" href="/mybids">My bids</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                My auctions
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/myauctions">See all</a></li>
                                <li><a class="dropdown-item" href="/newauction">Add new</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/mywins">My Wins</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/myorders">My Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/account">Account</a>
                        </li>
                        <li class="nav-item">
                            <button class="btn nav-link" @onclick=SignOut>Sign Out</button>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item">
                            <a class="nav-link" href="/signin">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/signup">Sign Up</a>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<main>
    @Body
</main>

<footer class="text-body-secondary py-5">
    <div class="container">
        <p>&copy; 2023 NeoBid. All Rights Reserved.</p>
    </div>
</footer>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private async Task SignOut()
    {
        await AuthenticationService.SignOut();
        NavigationManager.NavigateTo("/");
    }     
}